<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :year %>
  <%= text_input f, :year %>
  <%= error_tag f, :year %>

  <%= label f, :open %>
  <%= checkbox f, :open %>

  <%= label f, :closed %>
  <%= checkbox f, :closed, disabled: true %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
